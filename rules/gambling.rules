# Gambling Traffic Detection Rules
alert tls any any -> any any (
    msg:"SURICATA TRAFFIC-ID: gambling-judi"; 
    tls_sni; 
    content:"judi"; 
    isdataat:!1,relative; 
    flow:to_server,established; 
    flowbits:set,traffic/id/gambling; 
    flowbits:set,traffic/label/gambling; 
    sid:300100001; 
    rev:1;
)

alert tls any any -> any any (
    msg:"SURICATA TRAFFIC-ID: gambling-slot";
