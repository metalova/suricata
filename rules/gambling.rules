alert http $HOME_NET any -> $EXTERNAL_NET any (
    msg:"GAMBLING URL DETECT";
    flow:established,to_server;
    content:"judi"; http_uri; nocase;
    sid:9000001;
    rev:1;
)

# Rule 2 - Deteksi via SNI
alert tls $HOME_NET any -> $EXTERNAL_NET any (
    msg:"GAMBLING SNI DETECT";
    flow:established,to_server;
    tls.sni; content:".judi"; nocase;
    sid:9000002;
    rev:1;
)